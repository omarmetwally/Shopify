<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/productDetailsFragment">

  
  <fragment
        android:id="@+id/homeFragment"
        android:name="com.omarinc.shopify.home.view.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_productsFragment"
            app:destination="@id/productsFragment" />
    </fragment>
  
  <fragment
        android:id="@+id/testFragment"
        android:name="com.omarinc.shopify.home.view.TestFragment"
        android:label="fragment_test"
        tools:layout="@layout/fragment_test" />
  
  <fragment
        android:id="@+id/profileFragment"
        android:name="com.omarinc.shopify.profile.view.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>
  
  <fragment
        android:id="@+id/settingsFragment"
        android:name="com.omarinc.shopify.settings.view.SettingsFragment"
        android:label="SettingsFragment"
        tools:layout="fragment_settings"/>
        tools:layout="@layout/fragment_profile" />
  
  <fragment
        android:id="@+id/productsFragment"
        android:name="com.omarinc.shopify.home.view.ProductsFragment"
        android:label="fragment_products"
        tools:layout="@layout/fragment_products" >
        <argument
            android:name="id"
            app:argType="integer" />
      <action
          android:id="@+id/action_productsFragment_to_productDetailsFragment"
          app:destination="@id/productDetailsFragment" />
  </fragment>
  
    <fragment
        android:id="@+id/categoriesFragment"
        android:name="com.omarinc.shopify.home.view.CategoriesFragment"
        android:label="fragment_categories"
        tools:layout="@layout/fragment_categories" />
    <fragment
        android:id="@+id/productDetailsFragment"
        android:name="com.omarinc.shopify.productdetails.view.ProductDetailsFragment"
        android:label="fragment_product_details"
        tools:layout="@layout/fragment_product_details" >
        <action
            android:id="@+id/action_productDetailsFragment_to_productsFragment"
            app:destination="@id/productsFragment" />
    </fragment>
</navigation>